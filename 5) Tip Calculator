# 5 tip calculator
try:
  bill=int(input("enter the bill: "))
  persons=int(input("enter number of persons: "))
  tip=int(input("enter the tip you want to give: "))
except:
  print("enter number: ")

total_bill=bill+tip
bill_per_person=total_bill/persons
print(f"the bill for per person:{bill_per_person}")
