# ROCK PAPER SCISSOR

import random

def instructions():

  print("START GAME")
  print("read instructions carefully")
  print("ROCK wins against  SCISSORS | ")
  print("PAPER wins against ROCK ")
  print("SCISSORS wins against PAPER")
  print("if both chose same it will tie")
  print("")



