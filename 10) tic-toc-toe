board={1:" ",2:" ",3:" ",
       4:" ",5:" ",6:" ",
       7:" ",8:" ",9:" "}

def printBoard():
  print(board[1] +"|"+board[2]+"|"+board[3] )
  print("-+-+-")
  print(board[4] +"|"+board[5]+"|"+board[6] )
  print("-+-+-")
  print(board[7] +"|"+board[8]+"|"+board[9] )

def main():
  
  turn="x"
  for i in range(10):
    print("now playing :",turn)
    move=int(input("enter move(1-9)"))
    board[move]=turn
    printBoard()
    if turn =="x":
      turn="o"
    else:
      turn="x"

main()
